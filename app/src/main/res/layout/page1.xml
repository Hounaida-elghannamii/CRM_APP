<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView400"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                app:srcCompat="@drawable/kh1" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12sp"
                android:text="Lancement du IR Skills"
                android:textColor="#1B50EC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView115"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4sp"
                android:text="CREATION / Par ir skills"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView116"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9sp"
                android:text="IR SKILLS est l’Unique chaîne de Centre de Compétences Professionnelles basée au Maroc sur les villes de :  Tanger, Casablanca, El Jadida, Meknès, Ifrane, Errachideya, Marrakech et Laayoune.  Nous agissons principalement en formations/Coaching dans le cadre des métiers industriels, en audits et en conseils mettant au service des établissements et des acteurs étatiques et privés ainsi que les particuliers des solutions et des réponses adéquates à leurs besoins spécifiques, en termes de savoir-faire et de prestations pour appuyer leurs démarches d’amélioration et leur développement de compétences.  Forgés chez les plus exigeants, nos équipes tirent la force de la dimension pluridisciplinaire, plurisectorielle et de leurs expériences en réalisations sur le terrain.  Le déploiement de notre savoir-faire et notre flexibilité impulsent une mobilisation collective de vos collaborateurs autour des projets fédérateurs."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView118"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10sp"
                android:text="Pourquoi choisir IR Skills?"
                android:textColor="#1B50EC"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="IR Skills vous propose un large choix de formations dans le domaine industriel."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Nos formateurs sont spécialisés et ayant une large expérience dans leurs domaines."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView136"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Nombre de participants à notre centre est limité pour que vous puissiez interagir avec l’expert et bien capter les notions de cours."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView141"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="IR Skills repose généralement sur la pratique (80%de cours sont appliqués sur terrain)."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView142"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Les formations IR Skills sont très opérationnelles et constituent de véritables leviers pour trouver un nouveau travail."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView143"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Si vous êtes un salarié, notre formation vous permettra d’évoluer dans votre poste en améliorant vos aptitudes et vos connaissances."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tc9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="-Article Precedent"
                android:textColor="#1B50EC"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"

        app:headerLayout="@layout/header"
        app:itemTextColor="#1B50EC"
        app:menu="@menu/example_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>